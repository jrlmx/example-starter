{
    "$schema": "../../schema/starter-schema.json",
    "flags": ["--no-interaction"],
    "composer": {
        "production": ["livewire/livewire", "laravel/folio", "livewire/volt"],
        "development": ["wire-elements/wire-spy"]
    },
    "npm": {
        "development": ["tailwindcss@^4.0.0", "@tailwindcss/vite"]
    },
    "remove_files": ["resources/views/welcome.blade.php", "resources/js/bootstrap.js", "tailwind.config.js"],
    "artisan_commands": ["folio:install", "volt:install"],
    "commands": ["quiet:git init", "quiet:git add .", "quiet:git commit -m \"initial\""]
}
